{
  "name": "powerrunner",
  "productName": "PowerRunner",
  "version": "1.0.0",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "yarn build && SET NODE_ENV=dev && electron ./dist/electron/main.js",
    "build": "tsc -p tsconfig.electron.json && ng build --base-href ./",
    "build-prod": "tsc -p tsconfig.electron.json && ng build --prod --base-href ./",
    "copy-deps": "copyfiles ./package.json ./dist && copyfiles ./src/electron/powershell/*.ps1 ./dist --up 1 && copyfiles ./node_modules/**/*.* ./dist",
    "package": "yarn copy-deps && yarn build-prod && electron-packager ./dist --overwrite --out=./release",
    "installer": "node installer.js",
    "package-installer": "yarn package && yarn installer",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild --version 9.0.3",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.1.9",
    "@angular/cdk": "^9.2.4",
    "@angular/common": "~9.1.9",
    "@angular/compiler": "~9.1.9",
    "@angular/core": "~9.1.9",
    "@angular/forms": "~9.1.9",
    "@angular/material": "^9.2.4",
    "@angular/platform-browser": "~9.1.9",
    "@angular/platform-browser-dynamic": "~9.1.9",
    "@angular/router": "~9.1.9",
    "@types/underscore": "^1.9.2",
    "@w11k/ngx-componentdestroyed": "^4.1.4",
    "angular-split": "^3.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "^3.0.2",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "is-elevated": "^3.0.0",
    "js-yaml": "^3.13.1",
    "ngx-autosize-input": "^2.3.6",
    "ngx-markdown": "^8.2.1",
    "node-abi": "^2.18.0",
    "node-fetch": "^2.6.0",
    "node-pty": "^0.9.0",
    "node-yaml": "^4.0.1",
    "rxjs": "~6.5.5",
    "sqlite3": "^4.1.1",
    "ts-md5": "^1.2.7",
    "tslib": "^1.10.0",
    "underscore": "^1.9.1",
    "xregexp": "^4.2.4",
    "xterm": "^4.6.0",
    "xterm-addon-fit": "^0.4.0",
    "xterm-addon-search": "^0.7.0",
    "xterm-addon-web-links": "^0.4.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.7",
    "@angular/cli": "~9.1.7",
    "@angular/compiler-cli": "~9.1.9",
    "@angular/language-service": "~9.1.9",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@types/sqlite3": "^3.1.6",
    "codelyzer": "^5.1.2",
    "copyfiles": "^2.1.1",
    "electron": "^9.3.1",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.11.0",
    "electron-reload": "^1.5.0",
    "electron-winstaller": "^4.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~8.10.2",
    "tslint": "~5.15.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "typescript": "3.8.3"
  },
  "build": {
    "extraResources": [
      "./electron/powershell/**"
    ]
  }
}
