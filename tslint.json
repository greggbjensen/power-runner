{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-consistent-codestyle"
  ],
  "rules": {
    "arrow-parens": false,
    "deprecation": {
      "severity": "warn"
    },
    "component-class-suffix": true,
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "directive-selector": [
      true,
      "attribute",
      "exp",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "exp",
      "kebab-case"
    ],
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "debug",
      "log",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": false,
    "no-inferrable-types": false,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-use-before-declare": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": false,
    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "no-unused-variable": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ],
    "indent": [true, "spaces", 2],
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "naming-convention": [
      true,
      {"type": "functionVariable", "modifiers": ["const"], "format": ["camelCase"] },
      {"type": "default", "format": "camelCase", "leadingUnderscore": "forbid", "trailingUnderscore": "forbid"},
      {"type": "parameter", "modifiers": "private", "leadingUnderscore": "require"},
      {"type": "member", "modifiers": ["private", "static", "readonly"], "format": "PascalCase", "leadingUnderscore": "forbid"},
      {"type": "member", "modifiers": ["public", "static", "readonly"], "format": "PascalCase", "leadingUnderscore": "forbid"},
      {"type": "member", "modifiers": "private", "leadingUnderscore": "require"},
      {"type": "method", "modifiers": "private", "leadingUnderscore": "forbid"},
      {"type": "type", "format": "PascalCase"},
      {"type": "interface", "prefix": "I"},
      {"type": "genericTypeParameter", "prefix": "T"},
      {"type": "enumMember", "format": "PascalCase"},
      {"type": "variable", "modifiers": ["const"], "format": ["camelCase"]}
    ]
  },
  "rulesDirectory": [
    "codelyzer"
  ],
  "linterOptions": {
    "format": "vso"
  }
}